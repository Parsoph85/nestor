<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Заголовок приложения -->
    <LinearLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/back"
            android:text="" />

        <EditText
            android:id="@+id/editTheme"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center|start|left|center_vertical"
            android:inputType="textCapSentences|text"
            android:text=""
            android:textAlignment="center"
            android:textColor="#40474f"/>
    </LinearLayout>

    <!-- ScrollView для отображения заметок -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/bottomLayout"
        android:layout_below="@id/headLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/labelLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageLabel"
                    android:layout_weight="1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/offer" />

                <TextView
                    android:id="@+id/labelView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#40474f"
                    android:textAlignment="center" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/roboto_mono"
                android:gravity="center|start|top"
                android:inputType="textMultiLine"
                android:textColor="#40474f"
                android:padding="10dp"
                android:textFontWeight="18" />

        </LinearLayout>
    </ScrollView>

    <!-- Нижний Layout -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">


        <Button
            android:id="@+id/checkButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/check_button"
            android:text="" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/delete"
            android:text="" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/share"
            android:text="" />

        <Button
            android:id="@+id/exportButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/export" />

    </LinearLayout>

    <!-- Кнопка для добавления заметки -->
    <!-- Кнопка для перехода в настройки -->

</RelativeLayout>